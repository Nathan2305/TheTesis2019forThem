<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck_profile"
    tools:context=".Fragments.SearchHelpersFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:layout_marginTop="@dimen/space_action_bar_view_vertical"
            android:id="@+id/email_helper"
            android:padding="5dp"
            android:background="@drawable/rounded_corner_dialog"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/save_location"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:inputType="textEmailAddress"
            android:textSize="16dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rview_helpers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>