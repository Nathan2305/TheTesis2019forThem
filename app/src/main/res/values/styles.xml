<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_ver_agresion" parent="Widget.AppCompat.Button">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_btn_agresion</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Button_set_pin" parent="Widget.AppCompat.Button">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_btn_set_pin</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="disableButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/disableView</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button_contactCard" parent="Widget.AppCompat.Button">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/colorLila</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_button_card_contact</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="customEditTextRegistration">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/rounded_edittext_reg</item>
    </style>

    <style name="mail_passLogin">
        <item name="android:drawableStart">@drawable/icon_email_edit_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/rounded_edittext_reg</item>
    </style>

    <style name="transparentActionBar" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorFucsia</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TranslucentActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">#33000000
        </item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="TranslucentBottomNavView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textColorPrimary">@color/colorFucsia</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="CardViewProfile" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_weight">1</item>
        <item name="elevation">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginRight">10dp</item>

    </style>

    <style name="SwitchAlarma" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/progressBar</item>
    </style>
    <style name="pingAcess" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">numberPassword</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@drawable/pin_edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>


